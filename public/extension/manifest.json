{
  "name": "Pillager",
  "description": "Organize bookmarks based on tag names",
  "version": "1.0",

  "manifest_version": 2,

  "icons":{ "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Pillage this page!"
  },
  "content_scripts": [ {
    "js": [ "jquery-1.11.3.min.js", "popup.js", "submit.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab",
    "bookmarks",
    "storage",
    "tabs"
  ]
}